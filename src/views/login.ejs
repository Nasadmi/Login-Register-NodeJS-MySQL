<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <%- include('partials/links') %>
    <link rel="stylesheet" href="/css/user.css">
</head>
<body>
    <div class="container">
        <nav class="principal element-center">
            <ul class="nav-menu">
                <li>
                    <a href="/">Home</a>
                </li>
                <li>
                    <a href="/about">About</a>
                </li>
                <li>    
                    <a href="/contact">Contact</a>
                </li>
            </ul>
        </nav>
        <div class="content">
            <form action="/auth" method="POST">
                <div class="element-center">
                    <label for="username">
                        <h2>Username</h2>
                        <input type="text" name="username" id="username" spellcheck="false" autocomplete="on" required>
                    </label>
                </div>
                <div class="element-center top">
                    <label for="password">
                        <h2>Password</h2>
                        <input type="password" name="password" id="password" spellcheck="false" autocomplete="off" minlength="8" required>
                    </label>
                </div>
                <div class="element-center">
                    <button class="btn-form">
                        Login
                    </button>
                </div>
            </form>
        </div>
    </div>
    <%- include('partials/scripts') %>
    <% if(alert == true) { %>
        <script>
            Swal.fire(
                {
                    title: '<%= alertTitle %>',
                    text: '<%= alertMessage %>',
                    icon: '<%= alertIcon %>',
                    background: 'var(--Grey_Dark-Color)',
                    color: 'var(--White-Color)',
                    showConfirmButton: <%= showConfirmButton %>,
                    timer: <%= timer  %>,
                }
            ).then(() => {
                window.location = '<%= route %>'
            })
        </script>
    <% } %>
</body>
</html>